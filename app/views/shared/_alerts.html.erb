<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], :title => "Evren Nari", sticky: false) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], :title => "Evren Nari", sticky: false) %>
<% else flash[:notice] %>
	<%= js add_gritter(flash[:notice], :title => "Evren Nari", sticky: false) %>
<% end %>