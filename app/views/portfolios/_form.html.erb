
<%= form_for(@portfolio_item) do |form| %>
<% if @portfolio_item.errors.any? %>
    
      <% @portfolio_item.errors.full_messages.each do |message| %>
         <%= js add_gritter(message, :title => "Evren Nari", sticky: false) %>
      <% end %>
      
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title ,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle ,class: "form-control"%>
  </div>
  <div class="form-group">
    <label class= "btn btn-primary">
    Main Image File
    <%= form.file_field :main_image ,style: 'display:none'%>
    </label>

  </div>
  <div class="form-group">
    <label class= "btn btn-primary">
    Thumbnail Image File 
    <%= form.file_field :thumb_image ,style: 'display:none'%>
    </label>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body ,class: "form-control" ,rows: 10 %>
  </div>
  <p1> Technologies: </p1>
  <ul>
    <%= form.fields_for :technologies do |t| %>
      <%= render 'technology_fields', f: t %>
    <%end%>
    <%= link_to_add_association 'Add Tech', form, :technologies %>
    
   </ul> 
  <div class="form-group">
    <%= form.submit "Submit" , class: 'btn btn-primary' %>
    <button type="button" class="btn  btn-outline-secondary"><%= link_to "Back To Portfolios",portfolios_path   %></button>
  </div>
<% end %>
