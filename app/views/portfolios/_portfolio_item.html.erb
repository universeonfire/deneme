
<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
  	  <%= image_tag portfolio_img(portfolio_item.thumb_image.url , 'thumb'), width: '100%' %> 

        <div class="card-body" data-id = "<%=portfolio_item.id%>">
          <p class="card-text"><%= portfolio_item.subtitle %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Show",portfolio_show_path(portfolio_item)  %></button>
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'KayÄ±t Silinecektir Emin Misiniz?' }  if logged_in?(:site_admin)   %></button>
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit",edit_portfolio_path(portfolio_item)  if logged_in?(:site_admin)  %></button>
            </div>
          </div>
        </div>
  </div>
</div>

